# Copy this file to .env and fill in your actual values

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=true
SECRET_KEY=your-super-secret-key-here-change-this-in-production

# System Settings
AGENTIC_SYSTEM_NAME=Agentic AI System
AGENTIC_VERSION=1.0.0
AGENTIC_ENVIRONMENT=development

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Primary Database (SQLite for development, PostgreSQL for production)
DATABASE_URL=sqlite:///data/agentic.db
# DATABASE_URL=postgresql://username:password@localhost:5432/agentic_ai

# Credential Database (always encrypted)
CREDENTIAL_DB_PATH=data/credentials.db
CREDENTIAL_MASTER_PASSWORD=change-this-master-password-in-production

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# GitHub Integration
GITHUB_TOKEN=your-github-personal-access-token
GITHUB_USERNAME=your-github-username

# Google Services
GOOGLE_CLIENT_ID=your-google-client-id.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CREDENTIALS_PATH=config/google-credentials.json

# LLM7 API (Primary - Free Public API)
LLM7_API_KEY=llm7-free-api-key
LLM7_BASE_URL=https://api.llm7.com/v1

# OpenRouter API
OPENROUTER_API_KEY=your-openrouter-api-key

# CAMEL AI API
CAMEL_API_KEY=your-camel-api-key

# OpenAI API
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORG_ID=your-openai-organization-id

# HuggingFace API
HUGGINGFACE_TOKEN=your-huggingface-access-token

# Anthropic API
ANTHROPIC_API_KEY=your-anthropic-api-key

# =============================================================================
# WEB AUTOMATION & SECURITY
# =============================================================================

# Web Automation Settings
SELENIUM_DRIVER_PATH=/usr/local/bin/chromedriver
SELENIUM_HEADLESS=true
SELENIUM_TIMEOUT=30

# Security Settings
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
ENCRYPTION_ALGORITHM=AES-256

# =============================================================================
# PLATFORM DEPLOYMENT
# =============================================================================

# Port Configuration
PORT=5000
HOST=0.0.0.0

# Redis Configuration (for production scaling)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-app-password

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/agentic.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# =============================================================================
# ADVANCED FEATURES
# =============================================================================

# AI Model Configuration
DEFAULT_AI_MODEL=gpt-3.5-turbo
MAX_TOKENS=2048
TEMPERATURE=0.7

# Agent System
MAX_CONCURRENT_AGENTS=10
AGENT_TIMEOUT=300
ENABLE_DYNAMIC_AGENTS=true

# External Knowledge
ENABLE_EXTERNAL_KNOWLEDGE=true
KNOWLEDGE_CACHE_TTL=3600
WIKIPEDIA_API_ENABLED=true

# =============================================================================
# DEPLOYMENT SPECIFIC
# =============================================================================

# Railway Deployment
RAILWAY_ENVIRONMENT=production

# Vercel Deployment  
VERCEL_URL=your-app.vercel.app

# Netlify Deployment
NETLIFY_SITE_ID=your-netlify-site-id

# Firebase Deployment
FIREBASE_PROJECT_ID=your-firebase-project-id

# Render Deployment
RENDER_SERVICE_ID=your-render-service-id

